<Window x:Class="YMMResourcePackager.ExcludeSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="除外設定"
        Height="500" Width="600"
        Background="White"
        Foreground="Black"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="10" Background="White">
        <!-- 上部のボタン群 -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Name="BtnSelectAll" Content="すべて選択" Click="BtnSelectAll_Click"
                    Margin="0,0,5,0" Background="#f2f2f2" Foreground="Black"/>
            <Button Name="BtnDeselectAll" Content="すべて解除" Click="BtnDeselectAll_Click"
                    Margin="0,0,5,0" Background="#f2f2f2" Foreground="Black"/>
            <Button Name="BtnOk" Content="OK" Click="BtnOk_Click"
                    Width="75" Margin="0,0,5,0" Background="#0078D7" Foreground="White"/>
            <Button Name="BtnCancel" Content="キャンセル" Click="BtnCancel_Click"
                    Width="75" Background="#f2f2f2" Foreground="Black"/>
        </StackPanel>

        <!-- ファイル除外リスト -->
        <ListView Name="ExcludeListView"
                  Background="White"
                  Foreground="Black"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1"
                  ItemsSource="{Binding ExcludeItems}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsExcluded, Mode=TwoWay}" Margin="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="ファイルパス" Width="500" DisplayMemberBinding="{Binding FilePath}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
