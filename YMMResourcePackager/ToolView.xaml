<UserControl x:Class="YMMResourcePackagerPlugin.View.ToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="350" Width="400">
    <StackPanel Margin="10" VerticalAlignment="Top">
        <TextBlock Text="素材同梱プラグイン" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <Button Content="プロジェクトを選択" Command="{Binding SelectProjectCommand}" Margin="0,0,0,5"/>
        <TextBox Text="{Binding SelectedProject}" IsReadOnly="True" Margin="0,0,0,10"/>
        <Button Content="パッケージ化" Command="{Binding PackageCommand}" Margin="0,0,0,5"/>
        <Button Content="除外設定" Command="{Binding OpenExcludeSettingCommand}" Margin="0,0,0,5"/>
        <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="100" Height="20" Margin="0,5,0,0"/>
        <Button Content=".ymmpx を関連付け" Command="{Binding AssociateYmmpxCommand}" Margin="0,0,0,5"/>
        <TextBlock Text="{Binding Status}" TextWrapping="Wrap" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
